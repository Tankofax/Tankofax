<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:bottomLeftRadius="10dip" />
            <stroke android:width="2dip" android:color="@color/central" />
            <gradient android:angle="-90" android:startColor="@color/highlight_dark" android:endColor="@color/highlight_dark"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:bottomLeftRadius="10dip" />
            <stroke android:width="2dip" android:color="@color/central" />
            <solid android:color="@color/highlight_light"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:bottomLeftRadius="10dip" />
            <stroke android:width="2dip" android:color="@color/central" />
            <gradient android:angle="-90" android:startColor="@color/dark" android:endColor="@color/dark" />
        </shape>
    </item>
</selector>